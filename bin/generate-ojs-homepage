#!/usr/bin/env bash

CACHEDIR="${TMPDIR-/tmp/}homepage"

if [[ "$@" =~ '--help' ]]; then
  >&2 cat <<HELP
Usage: generate-ojs-homepage [forthcoming.html] | pbcopy

Fetch automatically generated OJS pages for S&P Volumes 10 through 3,
combine with the forthcoming list, and add a link to the archives.

If the OJS pages have changed recently, you may need to clean the cache:

    rm -rfv $CACHEDIR
HELP
  exit 1
fi

# Depends on pup from https://github.com/ericchiang/pup, which is for
# "Parsing HTML at the command line", and is available through Homebrew
if ! command -v pup >/dev/null 2>&1; then
  >&2 cat <<MISSING
Could not find 'pup' command. You need to install Pup:

    brew install pup

Recklessly continuing anyway.
MISSING
fi

mkdir -p "$CACHEDIR"

volume_contents() {
  # download the file if needed
  wget -nc http://semprag.org/issue/view/sp.$1 -P "$CACHEDIR"
  # using https://github.com/ericchiang/pup for html extraction
  # pull out the volume number + year
  echo '<h3>'
  pup '#main h2 text{}' -f "$CACHEDIR/sp.$1"
  echo '</h3>'
  # pull out the table of contents sections
  pup '[class^="toc"]' -f "$CACHEDIR/sp.$1"
}

separator() {
  echo '<div class="separator"></div>'
}

volume_contents 11
[[ -e "$1" ]] && cat "$1"
separator
volume_contents 10
separator
volume_contents 9
separator
volume_contents 8
separator
volume_contents 7
separator
volume_contents 6
separator
volume_contents 5
separator
volume_contents 4
separator
echo 'For earlier volumes, see <a href="http://semprag.org/issue/archive">the Archives tab</a>.'
